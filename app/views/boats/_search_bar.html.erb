<%= simple_form_for @boat, html: { class: "form-inline"} , :url => boats_path, :method => :get  do |f| %>
    <%= f.input :location, label_html: { class: 'sr-only' }, placeholder: 'location' %>
    <%= f.input :category, collection: Boat::CATEGORIES, label_html: { class: 'sr-only' }, prompt: 'category' %>
    <%= f.input :capacity, collection: Boat::CAPACITIES, label_html: { class: 'sr-only' }, prompt: 'capacity' %>
    <%= f.input :price, label_html: { class: 'sr-only' }, placeholder: 'price max'  %>
    <%= f.button :submit, "Search!", class: 'gold-button' %>
<% end %>
