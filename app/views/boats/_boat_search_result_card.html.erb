<div class='boat-search-result-card'>
  <div class='boat-card-image' style="background-image: url('<%= cl_image_path boat.photos.first.path %>');background-size:cover;">
  </div>
  <div class="boat-search-card-info">
    <div class="card-boat-caption">
      <span class="card-boat-category"> <%= boat.category %></span>, <span class='card-boat-location'><%= boat.location %></span>
    </div>

    <div class="card-boat-rating-box">
      <div class="card-boat-stars">
        <% 5.times do %>
          <%= image_tag("star", size: "16x16") %>
        <% end %>
      </div>
      <div class="card-boat-rating">
        <% if boat.reviews.average(:stars) %>
          <%= boat.reviews.average(:stars).round(2) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
