<h1>All Boats</h1>
<h2>Find the perfect boat for your adventure<h2>

<div class="jumbotron">

</div>

<div class="col-sm-6 col-sm-offset-3">
<%= simple_form_for @boat, :url => search_boat_path, :method => :get  do |f| %>

  <div class="form-inputs">
    <%= f.input :location %>
    <%= f.input :category, collection: Boat::CATEGORIES %>
    <%= f.input :capacity %>
    <%= f.input :price %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Search!" %>
  </div>
<% end %>
</div>


<% @boats.each do |boat| %>
  <tr>
    # <td><%= boat.name %></td>
  </tr>
<% end %>

<wrapper>
  <container>
    <div class='col-sm-10 col-sm-offset-1'>
      <div class='flex-box'>
        <% @boats.first(6).each do |boat| %>
          <%= render "show_card", boat: boat %>
        <% end %>
      </div>
    </div>
  </container>
</wrapper>

